<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornSilk"
    tools:context=".MainActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10px">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cornSilk"
            android:fontFamily="@font/amita_bold"
            android:text="PRODUCTOS"
            android:textAlignment="center"
            android:textColor="@color/crimson" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30px">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/inicio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:text="Carne" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <TextView
                            android:id="@+id/descripcion1"
                            android:layout_width="206dp"
                            android:layout_height="56dp"
                            android:background="@color/cornSilk"
                            android:fontFamily="@font/corben"
                            android:text="Arepa rellena con carne jugosa y llena de sabor."
                            android:textAlignment="center"
                            android:textColor="#E15353" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="204dp"
                            android:layout_height="wrap_content"
                            android:autoText="true"
                            android:background="@color/cornSilk"
                            android:text="$2.500"
                            android:textAlignment="center" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagen2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:text="Queso" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <TextView
                            android:id="@+id/descripcionP2"
                            android:layout_width="206dp"
                            android:layout_height="47dp"
                            android:fontFamily="@font/corben"
                            android:text="Arepa relena de queso mosarella, se garantiza que se estira."
                            android:textAlignment="center"
                            android:textColor="#E15353" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="204dp"
                            android:layout_height="wrap_content"
                            android:text="$3.000"
                            android:textAlignment="center" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagen3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:text="Pollo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <TextView
                            android:id="@+id/descripcion3"
                            android:layout_width="207dp"
                            android:layout_height="45dp"
                            android:background="@color/cornSilk"
                            android:fontFamily="@font/corben"
                            android:text="Arepa rellena de pollo, con verdura que resalta el sabor."
                            android:textAlignment="center"
                            android:textColor="#E15353" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="205dp"
                            android:layout_height="wrap_content"
                            android:text="$3.000"
                            android:textAlignment="center" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="204dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagen4"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:text="Mixta" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <TextView
                            android:id="@+id/descripcionP3"
                            android:layout_width="202dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/corben"
                            android:text="Arepa rellena de la combinaciÃ³n perfecta entre carne, pollo y queso."
                            android:textAlignment="center"
                            android:textColor="#E15353" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$4.000"
                            android:textAlignment="center" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>