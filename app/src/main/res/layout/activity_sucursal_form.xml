<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SucursalForm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cornSilk"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cornSilk"
                android:fontFamily="@font/amita_bold"
                android:text="CUALES SUCURSALES HAY"
                android:textAlignment="center"
                android:textColor="#FF03DAC5" />

            <Button
                android:id="@+id/btnChoose"
                android:layout_width="74dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Seleccionar" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSucursal"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@drawable/ser2" />

                    <EditText
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amita"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:text=""  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="283dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tvDescription"
                        android:layout_width="206dp"
                        android:layout_height="56dp"
                        android:background="@color/cornSilk"
                        android:fontFamily="@font/corben"
                        android:hint="Descripción"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#E15353" />

                    <TextView
                        android:id="@+id/tvLocalization"
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:autoText="true"
                        android:background="@color/cornSilk"
                        android:hint="Localización"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textAlignment="center" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInsertar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agregar" />


        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>