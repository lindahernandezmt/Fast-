<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornSilk"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10px">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cornSilk"
            android:fontFamily="@font/amita_bold"
            android:text="SERVICIOS"
            android:textAlignment="center"
            android:textColor="#FF03DAC5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30px">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/inicio1"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:text="Descuentos" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="211dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <TextView
                            android:id="@+id/descripcion1"
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:background="@color/cornSilk"
                            android:fontFamily="@font/corben"
                            android:text="Aprovechando temporadas para lanzar productos exquisitos."
                            android:textAlignment="center"
                            android:textColor="#FF03DAC5" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagen2"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:text="Promociones" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="209dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <TextView
                            android:id="@+id/descripcion2"
                            android:layout_width="200dp"
                            android:layout_height="54dp"
                            android:background="@color/cornSilk"
                            android:fontFamily="@font/corben"
                            android:text="Descuentos imperdibles cada semana."
                            android:textAlignment="center"
                            android:textColor="#FF03DAC5" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagen3"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:text="Domicilios" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <TextView
                            android:id="@+id/descripcion3"
                            android:layout_width="204dp"
                            android:layout_height="76dp"
                            android:background="@color/cornSilk"
                            android:fontFamily="@font/corben"
                            android:text="Se busca efectividad en la entrega y rapidez en el domicilio."
                            android:textAlignment="center"
                            android:textColor="#FF03DAC5" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/cornSilk"
                    android:fontFamily="@font/amita_bold"
                    android:text="SUGIERENOS UN NUEVO PRODUCTO"
                    android:textAlignment="center"
                    android:textColor="#FF03DAC5" />

                <Button
                    android:id="@+id/btnChoose"
                    android:layout_width="74dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="Seleccionar" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="30px">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/edtImage"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            app:srcCompat="@drawable/ser1" />

                        <EditText
                            android:id="@+id/edtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amita"
                            android:hint="Arepa"
                            android:inputType="textPersonName"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="70px">

                        <EditText
                            android:id="@+id/edtDescription"
                            android:layout_width="206dp"
                            android:layout_height="56dp"
                            android:background="@color/cornSilk"
                            android:fontFamily="@font/corben"
                            android:hint="DescripciÃ³n"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#E15353" />

                        <EditText
                            android:id="@+id/edtPrice"
                            android:layout_width="204dp"
                            android:layout_height="wrap_content"
                            android:autoText="true"
                            android:background="@color/cornSilk"
                            android:hint="precio"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textAlignment="center" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtId"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:hint="Id"
                    android:inputType="textPersonName"
                    android:text="" />

                <Button
                    android:id="@+id/btnConsultar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Consultar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAgregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Agregar" />

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eliminar" />

                <Button
                    android:id="@+id/btnActualizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Actualizar" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>